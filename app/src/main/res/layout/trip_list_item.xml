<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/cv"
        card_view:cardCornerRadius="16dp"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/sky_material_background"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:cropToPadding="false"
                android:visibility="visible" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/sunImageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/material_sun"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:cropToPadding="false"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nightImageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/night_mountains_4"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:cropToPadding="false"
                android:visibility="invisible"
                android:paddingTop="45dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|fill_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:text="9 March 2015"
                        android:id="@+id/dateTV"
                        android:layout_marginLeft="7dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:text="13:30 - 14:59  (1:29)"
                        android:id="@+id/timesTV"
                        android:layout_below="@+id/dateTV"
                        android:layout_alignStart="@+id/dateTV"
                        android:layout_marginLeft="7dp"
                        android:textColor="#c3010101" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:text="Total-- 51:30"
                        android:id="@+id/totalTV"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="7dp"
                        android:textColor="#c3010101" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:text="Night-- 11:47"
                        android:id="@+id/nightTotalTV"
                        android:layout_below="@+id/totalTV"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="7dp"
                        android:textColor="#c3010101" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</FrameLayout>