<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/material_primary_main"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider2"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date:"
        android:id="@+id/textView5"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/divider2"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1 Jan 2015"
        android:id="@+id/textView6"
        android:gravity="center_vertical"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/divider2"
        android:layout_marginRight="16dp" />
    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateButton"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/divider2"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider3"
        android:layout_below="@id/divider6"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start:"
        android:id="@+id/textView8"
        android:layout_below="@+id/divider6"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider3"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="9:00"
        android:id="@+id/textView7"
        android:gravity="center_vertical"
        android:layout_below="@+id/divider6"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/divider3"
        android:layout_marginRight="16dp" />
    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:layout_below="@id/divider6"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider3"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider4"
        android:layout_below="@id/divider3"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End:"
        android:id="@+id/textView9"
        android:layout_below="@id/divider3"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider4"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10:00"
        android:id="@+id/textView10"
        android:gravity="center_vertical"
        android:layout_below="@+id/divider3"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/divider4"
        android:layout_marginRight="16dp" />
    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endButton"
        android:layout_below="@id/divider3"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider4"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider5"
        android:layout_below="@id/divider4"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total:"
        android:id="@+id/textView11"
        android:layout_below="@id/divider4"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider5"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1:00"
        android:id="@+id/textView12"
        android:gravity="center_vertical"
        android:layout_below="@+id/divider4"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/divider5"
        android:layout_marginRight="16dp" />
    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalButton"
        android:layout_below="@id/divider4"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Driving Before:"
        android:id="@+id/textView13"
        android:layout_below="@+id/divider2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_alignBottom="@+id/divider6"
        android:gravity="center_vertical" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider6"
        android:layout_below="@+id/divider2"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="7:23"
        android:id="@+id/textView14"
        android:layout_below="@+id/divider2"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/divider6"
        android:gravity="center_vertical" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider7"
        android:layout_below="@id/divider5"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Driving After:"
        android:id="@+id/textView15"
        android:layout_below="@id/divider5"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider7"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="8:23"
        android:id="@+id/textView16"
        android:gravity="center_vertical"
        android:layout_below="@+id/divider5"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/divider7"
        android:layout_marginRight="16dp" />
    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalDrivingButton"
        android:layout_below="@id/divider5"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/divider7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Night Trip:"
        android:id="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/divider11"
        android:gravity="center_vertical"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/divider7"
        android:textSize="20dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider11"
        android:background="#ffd9d9d9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/divider7" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nightSwitch"
        android:theme="@style/AppTheme"
        android:gravity="center_vertical"
        android:layout_below="@+id/divider7"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/divider11"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout2"
        android:id="@+id/nightLayout"
        android:layout_below="@+id/divider11">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Night Before:"
            android:id="@+id/textView22"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/divider8"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:id="@+id/divider8"
            android:background="#ffd9d9d9"
            android:layout_alignParentStart="true"
            android:layout_marginTop="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0:50"
            android:id="@+id/textView19"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/divider8"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Night After:"
            android:id="@+id/textView21"
            android:gravity="center_vertical"
            android:layout_below="@+id/divider8"
            android:layout_alignStart="@+id/textView22"
            android:layout_alignBottom="@+id/divider10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1:50"
            android:id="@+id/textView20"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/divider8"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/divider10" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:id="@+id/divider10"
            android:background="#ffd9d9d9"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/divider8"
            android:layout_marginTop="36dp" />


    </RelativeLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:measureWithLargestChild="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2"
        android:gravity="center_vertical"
        android:background="@color/background_material_light">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text= "CANCEL"
            android:layout_weight="1"
            android:id="@+id/cancel" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:layout_weight="1"
            android:id="@+id/ok" />
    </LinearLayout>


</RelativeLayout>