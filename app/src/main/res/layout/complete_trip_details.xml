<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lldld"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="0 Jan 2015"
        android:id="@+id/dateTV"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="0:00 - 0:00  (0:00)"
        android:id="@+id/timeTV"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/dateTV"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Odometer Start:"
        android:id="@+id/textView14"
        android:layout_below="@+id/distanceTV"
        android:layout_alignLeft="@+id/dateTV" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLines="1"
        android:id="@+id/odoStartET"
        android:layout_alignParentEnd="true"
        android:padding="1dp"
        android:hint="000000"
        android:editable="true"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_alignBottom="@+id/textView14"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:background="@drawable/rect_text_edit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Odometer End:"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/overlayTV"
        android:layout_alignLeft="@+id/textView14" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/odoEndET"
        android:padding="1dp"
        android:hint="000000"
        android:editable="true"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView15"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:background="@drawable/rect_text_edit" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider1"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mumma"
        android:id="@+id/parentText"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7dp"
        android:layout_alignTop="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Supervisor:"
        android:id="@+id/textView17"
        android:layout_below="@+id/divider1"
        android:layout_alignStart="@+id/dateTV"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/textView14" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider2"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Car Rego:"
        android:id="@+id/textView7"
        android:layout_below="@+id/divider2"
        android:layout_alignStart="@+id/startTimeTV"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/textView17" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider3"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UFM623"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/parentText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Traffic:"
        android:id="@+id/textView9"
        android:layout_below="@+id/divider6"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light:"
        android:id="@+id/lightTrafficSwitch"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignTop="@+id/textView9"
        android:theme="@style/AppTheme"/>
    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium:"
        android:id="@+id/mediumTrafficSwitch"
        android:layout_below="@+id/lightTrafficSwitch"
        android:layout_alignEnd="@+id/lightTrafficSwitch"
        android:layout_marginTop="5dp"
        android:theme="@style/AppTheme"/>
    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heavy:"
        android:id="@+id/heavyTrafficSwitch"
        android:layout_below="@+id/mediumTrafficSwitch"
        android:layout_alignEnd="@+id/mediumTrafficSwitch"
        android:layout_marginTop="5dp"
        android:theme="@style/AppTheme" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider4"
        android:layout_below="@+id/heavyTrafficSwitch"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weather:"
        android:id="@+id/textView10"
        android:layout_below="@+id/divider4"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dry:"
        android:id="@+id/dryWeatherSwitch"
        android:layout_below="@+id/divider4"
        android:layout_alignEnd="@+id/mediumTrafficSwitch"
        android:layout_marginTop="5dp"
        android:theme="@style/AppTheme" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wet:"
        android:id="@+id/wetWeatherSwitch"
        android:layout_below="@+id/dryWeatherSwitch"
        android:layout_alignEnd="@+id/dryWeatherSwitch"
        android:layout_marginTop="5dp"
        android:theme="@style/AppTheme" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider5"
        android:layout_below="@+id/wetWeatherSwitch"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Distance: 0 km"
        android:id="@+id/distanceTV"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="5dp"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Times"
        android:id="@+id/editTimesButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:visibility="visible"
        android:background="?android:attr/selectableItemBackground"/>

    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/carButton"
        android:layout_below="@+id/divider2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/divider3" />

    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parentButton"
        android:layout_below="@+id/divider1"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/divider2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parking:"
        android:id="@+id/textView22"
        android:layout_below="@+id/divider3"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider6"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parkingSwitch"
        android:layout_alignTop="@+id/divider3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Light:"
        android:id="@+id/textView21"
        android:layout_below="@+id/divider7"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day:"
        android:id="@+id/daySwitch"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignRight="@+id/lightTrafficSwitch"
        android:theme="@style/AppTheme" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dawn/Dusk:"
        android:id="@+id/dawnSwitch"
        android:layout_below="@+id/daySwitch"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/daySwitch"
        android:theme="@style/AppTheme" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Night:"
        android:id="@+id/nightLightSwitch"
        android:layout_below="@+id/dawnSwitch"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/daySwitch"
        android:theme="@style/AppTheme" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/space2"
        android:layout_below="@+id/deleteTripButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Road Type:"
        android:id="@+id/textView18"
        android:layout_below="@+id/divider5"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Local St, Main Rd"
        android:id="@+id/roadTypeTV"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignEnd="@+id/textView8"
        android:gravity="right|top" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2px"
        android:id="@+id/divider7"
        android:layout_below="@+id/roadTypeTV"
        android:layout_alignParentStart="true"
        android:background="#ffd9d9d9"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roadTypeButton"
        android:layout_below="@+id/divider5"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/divider7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Total: 10:53"
        android:id="@+id/totalDrivingTV"
        android:layout_alignStart="@+id/textView14"
        android:gravity="bottom"
        android:layout_below="@+id/timeTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="( Night: 5:42 )"
        android:id="@+id/totalNightTV"
        android:layout_toRightOf="@+id/totalDrivingTV"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/totalDrivingTV"
        android:layout_marginLeft="30dp" />

    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nightSwitch"
        android:checked="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/totalDrivingTV"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Night Trip:"
        android:id="@+id/textView16"
        android:layout_alignStart="@+id/timeTV"
        android:layout_alignTop="@+id/nightSwitch"
        android:layout_alignBottom="@+id/nightSwitch"
        android:gravity="center_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE TRIP"
        android:id="@+id/deleteTripButton"
        android:layout_alignStart="@+id/textView21"
        android:layout_below="@+id/nightLightSwitch"
        android:layout_alignEnd="@+id/roadTypeTV"
        android:layout_marginTop="5dp" />


</RelativeLayout>